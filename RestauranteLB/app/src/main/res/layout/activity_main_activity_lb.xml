<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.miguel.restaurantelb.MainActivityLB">

    <TextView
        android:id="@+id/tituloTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Restaurant LB "
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4">

        <ImageButton
            android:id="@+id/imagen1IB"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="30dp"
            android:layout_row="0"
            android:onClick="click1"
            android:scaleType="centerCrop"
            android:src="@drawable/uno" />

        <ImageButton
            android:id="@+id/imagen2IB"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:onClick="click2"
            android:scaleType="centerCrop"
            android:src="@drawable/dos" />

        <ImageView
            android:id="@+id/imaagen3IV"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:onClick="click3"
            android:scaleType="centerCrop"
            android:src="@drawable/tres" />

        <ImageButton
            android:id="@+id/imagen4IB"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:layout_row="3"
            android:onClick="click4"
            android:scaleType="centerCrop"
            android:src="@drawable/cuatro" />

        <ImageView
            android:id="@+id/imaagen5IV"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:layout_row="2"
            android:onClick="click5"
            android:scaleType="centerCrop"
            android:src="@drawable/cinco" />

        <ImageButton
            android:id="@+id/imagen6IB"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:layout_row="2"
            android:onClick="click6"
            android:scaleType="centerCrop"
            android:src="@drawable/seis" />

        <ImageView
            android:id="@+id/imaagen7IV"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginTop="30dp"
            android:layout_row="3"
            android:onClick="click7"
            android:scaleType="centerCrop"
            android:src="@drawable/siete" />
    </GridLayout>
</LinearLayout>
